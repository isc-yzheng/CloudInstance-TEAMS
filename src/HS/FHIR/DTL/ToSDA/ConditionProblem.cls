Class HS.FHIR.DTL.ToSDA.ConditionProblem Extends Ens.DataTransformDTL [ DependsOn = (HS.FHIR.vDSTU2.Model.Resource.Condition, HS.SDA3.Problem) ]
{

Parameter IGNOREMISSINGSOURCE = 1;

Parameter REPORTERRORS = 1;

Parameter TREATEMPTYREPEATINGFIELDASNULL = 0;

XData DTL [ XMLNamespace = "http://www.intersystems.com/dtl" ]
{
<transform sourceClass='HS.FHIR.vDSTU2.Model.Resource.Condition' targetClass='HS.SDA3.Problem' create='new' language='objectscript' >
<annotation>This transform uses the reserved DTL input parameter named &#39;aux&#39;.
For this transform, aux is a local array of strings.  The values held in aux were generated by the FHIR to SDA DTL framework prior to calling into this transform.
aux("EncounterNumbers", fhir_resource_id) = SDA EncounterNumber to use for the encounter pointed to by the FHIR resource.</annotation>
<if condition='source.identifier.Count()&gt;0' >
<true>
<assign value='source.identifier.(1).value.value' property='target.ExternalId' action='set' />
</true>
</if>
<if condition='..Piece(source.encounter.reference.value,"Encounter/",2) &apos;= ""' >
<true>
<assign value='$G(aux("EncounterNumbers",..Piece(source.encounter.reference.value,"Encounter/",2)))' property='target.EncounterNumber' action='set' />
</true>
</if>
<assign value='##class(HS.FHIR.DTL.Utils).NormalizeTimeStamp(source.dateRecorded.value)' property='target.EnteredOn' action='set' />
<assign value='##class(HS.FHIR.DTL.Utils).NormalizeTimeStamp(source.onsetDateTime.value)' property='target.FromTime' action='set' />
<assign value='##class(HS.FHIR.DTL.Utils).NormalizeTimeStamp(source.abatementDateTime.value)' property='target.ToTime' action='set' />
<assign value='source.code.text.value' property='target.Problem.OriginalText' action='set' />
<if condition='($IsObject(source.code.coding)) &amp;&amp; (source.code.coding.Count() &gt; 0)' >
<true>
<assign value='source.code.coding.(1).code.value' property='target.Problem.Code' action='set' />
<assign value='source.code.coding.(1).display.value' property='target.Problem.Description' action='set' />
<assign value='source.code.coding.(1).version.value' property='target.Problem.CodeSystemVersionId' action='set' />
<assign value='##class(HS.FHIR.DTL.Utils).GetCodeForURI(source.code.coding.(1).system.value)' property='target.Problem.SDACodingStandard' action='set' />
</true>
</if>
<if condition='$IsObject(source.category)' >
<true>
<assign value='source.category.text.value' property='target.Category.OriginalText' action='set' />
<if condition='source.category.coding.Count() &gt; 0' >
<true>
<assign value='source.category.coding.(1).code.value' property='target.Category.Code' action='set' />
<assign value='source.category.coding.(1).display.value' property='target.Category.Description' action='set' />
<assign value='source.category.coding.(1).version.value' property='target.Category.CodeSystemVersionId' action='set' />
<assign value='##class(HS.FHIR.DTL.Utils).GetCodeForURI(source.category.coding.(1).system.value)' property='target.Category.SDACodingStandard' action='set' />
</true>
</if>
</true>
</if>
<assign value='source.clinicalStatus.value' property='target.Status.Description' action='set' />
<assign value='source.notes.value' property='target.ProblemDetails' action='set' />
<if condition='..StartsWith(source.asserter.reference.value,"#")' >
<true>
<foreach property='source.contained()' key='k2' >
<if condition='"#"_source.contained.(k2).Practitioner.id.value = source.asserter.reference.value' >
<true>
<subtransform class='HS.FHIR.DTL.ToSDA.SubTransform.Practitioner' targetObj='target.Clinician' sourceObj='source.contained.(k2).Practitioner' />
</true>
</if>
</foreach>
</true>
</if>
</transform>
}

}
